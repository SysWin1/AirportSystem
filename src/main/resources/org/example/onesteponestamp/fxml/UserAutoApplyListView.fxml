<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
  fx:controller="org.example.onesteponestamp.javafx.UserAutoApplyListController">
  <center>
    <VBox BorderPane.alignment="CENTER" prefHeight="400.0" prefWidth="850.0"
      stylesheets="@../css/UserAutoApplyList.css">
      <GridPane hgap="10" vgap="10" fx:id="form">

        <Button GridPane.columnIndex="8" onAction="#searchTableData" prefHeight="22.0" prefWidth="61.0"
          text="조회" fx:id="searchButton"/>
        <ComboBox GridPane.columnIndex="4" fx:id="countryNameInput"/>

        <Label GridPane.columnIndex="3" text="국적"/>
        <Label prefHeight="14.0" prefWidth="52.0" text="여권번호"/>
        <TextField GridPane.columnIndex="1" fx:id="passportNoInput"/>
        <columnConstraints>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
          <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints prefHeight="50.0"/>
          <RowConstraints/>
        </rowConstraints>
      </GridPane>

      <!-- Form for Input -->
      <TableView VBox.vgrow="always" prefHeight="345.0" prefWidth="769.0" fx:id="tableView">
        <columns>
          <TableColumn prefWidth="61.999969482421875" text="신청번호" fx:id="applyNo"/>
          <TableColumn prefWidth="103.99996948242188" text="영문명" fx:id="englishName"/>
          <TableColumn prefWidth="30.66668701171875" text="성별" fx:id="gender"/>
          <TableColumn prefWidth="98.6666259765625" text="비자 종류" fx:id="visaType"/>
          <TableColumn prefWidth="42.0" text="입출국" fx:id="inout"/>
          <TableColumn prefWidth="68.66668701171875" text="입출국 국가" fx:id="inoutCountry"/>
          <TableColumn prefWidth="86.6666259765625" text="입출국 예상일" fx:id="expectedInOutDate"/>
          <TableColumn minWidth="9.33331298828125" prefWidth="31.33331298828125"
            text="승인" fx:id="approvalStatus"/>
          <TableColumn prefWidth="122.66656494140625" text="거부 사유" fx:id="rejectReason"/>
          <TableColumn prefWidth="81.333251953125" text="신청일자" fx:id="createdAt"/>
        </columns>
      </TableView>

      <!-- TableView for Displaying Results -->
      <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
      </padding>
    </VBox>
  </center>
  <left>
    <Pane BorderPane.alignment="CENTER" prefHeight="400.0" prefWidth="100.0"/>
  </left>
  <right>
    <Pane BorderPane.alignment="CENTER" prefHeight="200.0" prefWidth="100.0"/>
  </right>
</BorderPane>
