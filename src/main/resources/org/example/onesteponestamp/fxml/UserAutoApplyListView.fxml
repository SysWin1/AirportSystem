<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="800.0" stylesheets="@../css/UserAutoApplyList.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.onesteponestamp.javafx.UserAutoApplyListController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>

  <!-- Form for Input -->
  <GridPane fx:id="form" hgap="10" vgap="10">

    <Label text="국적" GridPane.columnIndex="3" />
    <ComboBox fx:id="countryNameInput" GridPane.columnIndex="4" />

    <Button fx:id="searchButton" onAction="#searchTableData" prefHeight="22.0" prefWidth="61.0" text="조회" GridPane.columnIndex="8" />
    <Label prefHeight="14.0" prefWidth="52.0" text="여권번호" />
    <TextField fx:id="passportNoInput" GridPane.columnIndex="1" />
    <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints />
    </rowConstraints>
  </GridPane>

  <!-- TableView for Displaying Results -->
  <TableView fx:id="tableView" VBox.vgrow="always">
    <columns>
      <TableColumn fx:id="applyNo" prefWidth="63.3333101272583" text="신청번호" />
      <TableColumn fx:id="englishName" prefWidth="84.66663360595703" text="영문명" />
      <TableColumn fx:id="gender" prefWidth="41.33331298828125" text="성별" />
      <TableColumn fx:id="visaType" prefWidth="84.66667175292969" text="비자 종류" />
      <TableColumn fx:id="inout" prefWidth="50.66668701171875" text="입출국" />
      <TableColumn fx:id="inoutCountry" prefWidth="79.33331298828125" text="입출국 국가" />
      <TableColumn fx:id="expectedInOutDate" prefWidth="97.333251953125" text="입출국 예상 일자" />
      <TableColumn fx:id="approvalStatus" prefWidth="34.6666259765625" text="승인" />
      <TableColumn fx:id="rejectReason" prefWidth="130.6666259765625" text="거부 사유" />
      <TableColumn fx:id="createdAt" prefWidth="137.3333740234375" text="신청일자" />
    </columns>
  </TableView>
</VBox>
