<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="950.0"
  stylesheets="@../css/UserMain.css" xmlns="http://javafx.com/javafx/17"
  fx:controller="org.example.onesteponestamp.javafx.UserMainViewController"
  fx:id="mainLayout">
  <bottom>
    <GridPane BorderPane.alignment="CENTER" prefHeight="70.0" prefWidth="806.0">
      <Hyperlink GridPane.columnIndex="2" GridPane.rowIndex="2"
        onAction="#gotoHyperlink" text="https://github.com/SysWin1/OneStepOneStamp"
        fx:id="footerlink"/>
      <ImageView GridPane.columnIndex="1" GridPane.rowIndex="2" fitHeight="20.0" fitWidth="20.0">
        <image>
          <Image url="@../images/github.png"/>
        </image>
      </ImageView>

      <Label GridPane.columnIndex="1" text="Team"/>

      <!-- Controller에서 하이퍼링크 넣기 -->
      <Label GridPane.columnIndex="2" text="마곡행"/>
      <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="Members"/>
      <Label GridPane.columnIndex="2" GridPane.rowIndex="1" text="정다빈 김수지 이서호 임현정"/>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="276.33331298828125" minWidth="0.0"
          prefWidth="71.00003051757812"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="657.0" minWidth="10.0"
          prefWidth="71.00000762939452"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="676.000005086263" minWidth="10.0"
          prefWidth="610.9999923706055"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
    </GridPane>
  </bottom>
  <center>
    <VBox prefHeight="435.0" prefWidth="950.0">
      <children>
        <HBox style="-fx-padding: 40;" alignment="CENTER" prefHeight="351.0" prefWidth="950.0"
          spacing="20">
          <ImageView fitHeight="274.0" fitWidth="351.0" pickOnBounds="true" preserveRatio="true">
            <image>
              <Image url="@../images/gate.png"/>
            </image>
          </ImageView>
          <Region prefHeight="244.0" prefWidth="46.0"/>
          <VBox prefHeight="244.0" prefWidth="349.0">
            <children>
              <HBox alignment="CENTER" spacing="20">
                <Button style="-fx-pref-width: 150;" onAction="#showAutoApplyForm"
                  styleClass="user-main-button" text="바로 등록하러 가기"/>
                <Button style="-fx-pref-width: 150;" styleClass="user-main-button"
                  text="신청 가이드 문서"/>
              </HBox>
              <Label style="-fx-font-size: 18px;" prefHeight="195.0" prefWidth="355.0"
                text="자동 출입국 시스템 신청을 통해      대면검사 없이 바로 여행하세요" textAlignment="CENTER"
                wrapText="true"/>
              <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-font-family: 'MangoByeolbyeol'" prefHeight="37.0"
                prefWidth="352.0"
                text="One Step - Walk Through" textAlignment="CENTER"/>
            </children>
          </VBox>
        </HBox>
        <Pane prefHeight="138.0" prefWidth="950.0"/>
        <Pane prefHeight="59.0" prefWidth="950.0"/>
      </children>
    </VBox>
  </center>
  <top>
    <VBox>
      <children>
        <HBox prefHeight="44.1" prefWidth="950.0" fx:id="top">
          <children>
            <HBox prefHeight="45.0" prefWidth="200.0">
              <children>
                <Button onAction="#showAdminLogin" prefHeight="44" prefWidth="175.0"
                  styleClass="admin-button" text="관리자로 로그인" fx:id="adminButton"/>
              </children>
            </HBox>
            <MenuBar style="-fx-padding: 10;" prefHeight="45.0" prefWidth="759.0"
              styleClass="menu-bar">
              <Menu text="자동 출입국 등록">
                <MenuItem onAction="#showAutoApplyForm" styleClass="menu-item"
                  text="자동 출입국 신청서 작성"/>
                <MenuItem onAction="#showAutoApplyList" styleClass="menu-item" text="신청 결과 조회"/>
              </Menu>
              <Menu text="공항 서비스">
                <MenuItem onAction="#showImmigrationGateForm" styleClass="menu-item"
                  text="출입국(게이트 통과)"/>
              </Menu>
            </MenuBar>
            <StackPane prefHeight="45" prefWidth="90" styleClass="image-background">
              <ImageView fitHeight="45" fitWidth="90" onMouseClicked="#showUserMainView"
                pickOnBounds="true" preserveRatio="true" styleClass="menu-bar">
                <Image url="@../images/logo.png"/>
              </ImageView>
            </StackPane>
          </children>
        </HBox>
      </children>
    </VBox>
  </top>
</BorderPane>
