<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="950.0"
  stylesheets="@/org/example/onesteponestamp/css/ImmigrationList.css"
  xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.onesteponestamp.javafx.ImmigrationListController"
  fx:id="backgroud">
  <center>
    <HBox prefHeight="547.0" prefWidth="950.0">
      <children>
        <HBox prefHeight="650.0" prefWidth="649.0">
          <children>
            <VBox prefHeight="567.0" prefWidth="880.0">
              <children>
                <HBox prefHeight="51.0" prefWidth="658.0">
                  <children>
                    <VBox>
                      <children>
                        <RadioButton mnemonicParsing="false" selected="true" text="전체"
                          fx:id="allNational">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" selected="true" text="전체" fx:id="all">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                      </children>
                    </VBox>
                    <VBox>
                      <children>
                        <RadioButton mnemonicParsing="false" text="내국인" fx:id="korean">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="입국" fx:id="in">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                      </children>
                    </VBox>
                    <VBox>
                      <children>
                        <RadioButton mnemonicParsing="false" text="외국인" fx:id="foreign">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="출국" fx:id="out">
                          <padding>
                            <Insets left="10.0" top="10.0"/>
                          </padding>
                        </RadioButton>
                      </children>
                    </VBox>
                    <VBox>
                      <children>
                        <DatePicker prefHeight="29.0" prefWidth="187.0" fx:id="datePicker"/>
                      </children>
                      <padding>
                        <Insets left="10.0" top="15.0"/>
                      </padding>
                    </VBox>
                    <VBox prefHeight="52.0" prefWidth="265.0">
                      <children>
                        <Label prefHeight="31.0" prefWidth="80.0" text="총 건수: 0" fx:id="totalLabel">
                          <font>
                            <Font size="13.0"/>
                          </font>
                          <padding>
                            <Insets top="15.0"/>
                          </padding>
                        </Label>
                      </children>
                      <padding>
                        <Insets left="180.0" top="15.0"/>
                      </padding>
                    </VBox>
                  </children>
                </HBox>
                <VBox prefHeight="566.0" prefWidth="650.0">
                  <children>
                    <Pagination prefHeight="60.0" prefWidth="648.0" fx:id="pagination"/>

                    <TableView maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="502.0" prefWidth="648.0"
                      fx:id="view">
                      <columns>
                        <TableColumn prefWidth="40" text="Idx" fx:id="idx"/>
                        <TableColumn prefWidth="80" text="신청 번호" fx:id="applyNo"/>
                        <TableColumn prefWidth="80" text="여권 번호" fx:id="passportNo"/>
                        <TableColumn prefWidth="70" text="국가 코드" fx:id="countryCode"/>
                        <TableColumn prefWidth="65" text="입/출국" fx:id="inOut"/>
                        <TableColumn prefWidth="100" text="입/출국일" fx:id="inOutDate"/>
                        <TableColumn prefWidth="130" text="비자 유형" fx:id="visaType"/>
                        <TableColumn prefWidth="80" text="입출국 국가" fx:id="inOutCountry"/>
                      </columns>
                    </TableView>
                  </children>
                  <padding>
                    <Insets left="10.0" top="5.0"/>
                  </padding>
                </VBox>
              </children>
            </VBox>
            <VBox prefHeight="645.0" prefWidth="300.0">
              <children>
                <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                  fx:id="logoView"/>
              </children>
              <padding>
                <Insets top="170.0"/>
              </padding>
            </VBox>
          </children>
        </HBox>
      </children>
    </HBox>
  </center>
</BorderPane>
