<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="650.0" prefWidth="950.0"
  stylesheets="@/org/example/onesteponestamp/css/autoApplyList.css"
  xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.onesteponestamp.javafx.AutoApplyListController"
  fx:id="pane">

  <center>
    <VBox>
      <children>
        <HBox>
          <children>
            <VBox>
              <children>

                <!-- Radio Buttons for Entry/Exit Group -->
                <RadioButton selected="true" text="전체" fx:id="allPersons">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
                <!-- Radio Buttons for Person Group -->
                <RadioButton selected="true" text="전체" fx:id="allEntries">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
              </children>
            </VBox>
            <VBox>
              <children>
                <RadioButton text="내국인" fx:id="locals">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
                <RadioButton text="입국" fx:id="entries">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
              </children>
            </VBox>
            <VBox>
              <children>
                <RadioButton text="외국인" fx:id="foreigners">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
                <RadioButton text="출국" fx:id="exits">
                  <padding>
                    <Insets left="10.0" top="10.0"/>
                  </padding>
                </RadioButton>
              </children>
            </VBox>
            <VBox>
              <children>

                <!-- Date Picker -->
                <DatePicker prefHeight="18.0" prefWidth="187.0" fx:id="datePicker"/>

                <!-- Search Field and Button -->
                <TextField promptText="검색어" fx:id="searchField">
                  <VBox.margin>
                    <Insets top="5.0"/>
                  </VBox.margin>
                </TextField>
              </children>
              <padding>
                <Insets left="10.0" top="5.0"/>
              </padding>
            </VBox>
            <VBox prefHeight="55.0" prefWidth="94.0">
              <children>
                <Button onAction="#setItems" text="조회" fx:id="searchButton">
                  <VBox.margin>
                    <Insets/>
                  </VBox.margin>
                </Button>
              </children>
              <padding>
                <Insets left="15.0" top="15.0"/>
              </padding>
            </VBox>
          </children>
        </HBox>
        <VBox BorderPane.alignment="CENTER">
          <children>

            <TableView prefHeight="477.0" prefWidth="950.0" fx:id="view">
              <columns>
                <TableColumn prefWidth="65" text="신청 번호" fx:id="applyNo"/>
                <TableColumn prefWidth="64" text="여권 번호" fx:id="passportNo"/>
                <TableColumn prefWidth="55.0" text="국가 코드" fx:id="countryCode"/>
                <TableColumn prefWidth="115" text="영문 이름" fx:id="englishName"/>
                <TableColumn prefWidth="40" text="성별" fx:id="gender"/>
                <TableColumn prefWidth="78" text="여권 발급일" fx:id="issueDate"/>
                <TableColumn prefWidth="79.0" text="여권 만료일" fx:id="expiryDate"/>
                <TableColumn prefWidth="61" text="생년월일" fx:id="birth"/>
                <TableColumn prefWidth="94.0" text="비자 유형" fx:id="visaType"/>
                <TableColumn prefWidth="54" text="입/출국" fx:id="inout"/>
                <TableColumn prefWidth="85" text="입/출국 국가" fx:id="inoutCountry"/>
                <TableColumn prefWidth="100" text="입/출국 예상일" fx:id="expectedInOutDate"/>
                <TableColumn prefWidth="64" text="승인/거부" fx:id="approvalStatus"/>
                <TableColumn prefWidth="100" text="거부 사유" fx:id="rejectReason"/>
                <TableColumn prefWidth="61" text="신청 일자" fx:id="createdAt"/>
              </columns>
            </TableView>
          </children>
          <padding>
            <Insets top="15.0"/>
          </padding>
        </VBox>

      </children>
    </VBox>

  </center>
</BorderPane>
